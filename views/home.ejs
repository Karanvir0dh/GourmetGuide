<!-- Define the document type as HTML5 -->
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Set character encoding for the document -->
    <meta charset="UTF-8">
    <!-- Configure viewport settings for responsive design -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Set the title of the web page -->
    <title>GourmetGuide</title>
    <!-- Link to the Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
        integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
    <!-- Link to custom stylesheet for further customization -->
    <link rel="stylesheet" href="/stylesheets/home.css">
</head>

<body class="d-flex text-center text-white bg-dark">
    <!-- Main content container -->
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <!-- Header section -->
        <header class="mb-auto">
            <div>
                <!-- Website logo/title -->
                <h3 class="float-md-left mb-0">GourmetGuide</h3>
                <!-- Navigation menu -->
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="/restaurants">Restaurants</a>
                    <!-- Conditional rendering based on user's login status -->
                    <% if(!currentUser) { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                    <% } else { %>
                    <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
                </nav>
            </div>
        </header>
        <!-- Main content of the webpage -->
        <main class="px-3">
            <h1>GourmetGuide</h1>
            <!-- Brief description about the website -->
            <p class="lead"> Welcome to GourmetGuide! <br> Jump right in and explore our many restaurants. <br>
                Feel free to share some of your own and comment on others!</p>
            <!-- CTA button linking to restaurants page -->
            <a href="/restaurants" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">View
                Restaurants</a>
        </main>

        <!-- Footer section -->
        <footer class="mt-auto text-white-50">
            <!-- Copyright information -->
            <p>&copy; 2023 </p>
        </footer>
    </div>

    <!-- Scripts necessary for Bootstrap's JavaScript features -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
        integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
        crossorigin="anonymous"></script>
</body>

</html>
