<% layout('layouts/boilerplate.ejs') %>

<h1>All Restaurants</h1>
<div>
    <a href="/restaurants/new"><button>Add a Restaurant</button></a>
</div>
<% for( let restaurant of restaurants) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (restaurant.images.length) { %>
            <img src="<%= restaurant.images[0].url %>" alt="" class="img-fluid">
            <% }else {%>
            <img src="https://res.cloudinary.com/dgegokbk6/image/upload/v1694704587/GourmetGuide/bwbgqrkq6wasq9ufedlt.jpg"
                alt="" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= restaurant.title %></h5>
                <small class="text-secondary"><%= restaurant.priceRange %></small>
                <p class="card-text"><%= restaurant.description %></p>
                <p class="card-text">
                    <small class="text-secondary"><%= restaurant.location %></small>
                </p>
                <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">View <%= restaurant.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>